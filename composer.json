{
    "name": "unialteri/states",
    "type": "library",
    "description": "Library to create PHP classes following the State pattern in PHP. This can be a cleaner way for an object to change its behavior at runtime without resorting to large monolithic conditional statements and thus improve maintainability.",
    "keywords": ["states","class","state pattern","pattern","behavioral software design pattern"],
    "homepage": "http://teknoo.it/states",
    "license": ["MIT"],
    "authors": [
        {
            "name": "Richard DÃ©loge",
            "email": "r.deloge@uni-alteri.com",
            "role":"Software architect, Lead developer"
        }
    ],
    "support": {
        "issues": "https://github.com/UniAlteri/states/issues",
        "source": "https://github.com/UniAlteri/states"
    },
    "require":{
        "php": ">=7.0-dev",
        "symfony/console": "~2.0",
        "knplabs/gaufrette": "~0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "5.0.x-dev"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "UniAlteri\\States\\": ["src/"],
            "UniAlteri\\Tests\\States\\": ["tests/States/"],
            "UniAlteri\\Tests\\Support\\": ["tests/Support/"]
        }
    },
    "archive": {
        "exclude": ["demo", "vendor", ".idea"]
    },
    "bin": ["bin/states"],
    "scripts": {
      "test":"phpunit",
      "states":"bin/states"
    }
}
