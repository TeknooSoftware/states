{
    "name": "teknoo/states",
    "type": "library",
    "description": "Library to create PHP classes following the State pattern in PHP. This can be a cleaner way for an object to change its behavior at runtime without resorting to large monolithic conditional statements and thus improve maintainability.",
    "keywords": ["states","class","state pattern","pattern","behavioral software design pattern"],
    "homepage": "http://teknoo.software/states",
    "license": ["MIT","GPL-3.0+"],
    "authors": [
        {
            "name": "Richard DÃ©loge",
            "email": "richarddeloge@gmail.com",
            "role":"Software architect, Lead developer"
        }
    ],
    "support": {
        "issues": "https://github.com/TeknooSoftware/states/issues",
        "source": "https://github.com/TeknooSoftware/states"
    },
    "config": {
        "optimize-autoloader": true
    },
    "require":{
        "php": ">=5.4.0,<7.0",
        "pimple/pimple": "~3.0",
        "symfony/console": "~2.0",
        "knplabs/gaufrette": "<2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "phpunit/phpunit-mock-objects": "~2.3",
        "phpunit/phpunit-selenium": "~1.4",
        "phpunit/phpunit-story": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Teknoo\\States\\": ["src/Teknoo/States/"],
            "Teknoo\\Tests\\States\\": ["tests/Teknoo/Tests/States"],
            "Teknoo\\Tests\\Support\\": ["tests/Teknoo/Tests/Support"]
        }
    },
    "archive": {
        "exclude": ["demo", "vendor", ".idea"]
    },
    "bin": ["bin/states"],
    "scripts": {
      "test":"phpunit",
      "states":"bin/states"
    }
}
