{
    "name": "teknoo/states",
    "type": "library",
    "description": "Library to create PHP classes following the State pattern in PHP. This can be a cleaner way for an object to change its behavior at runtime without resorting to large monolithic conditional statements and this improve maintainability and workflows writing.",
    "keywords": ["states","class","state pattern","pattern","behavioral software design pattern","workflow"],
    "homepage": "http://teknoo.software/states",
    "license": ["MIT"],
    "authors": [
        {
            "name": "Richard DÃ©loge",
            "email": "richarddeloge@gmail.com",
            "role":"Software architect, Lead developer"
        }
    ],
    "support": {
        "issues": "https://github.com/TeknooSoftware/states/issues",
        "source": "https://github.com/TeknooSoftware/states"
    },
    "config": {
        "optimize-autoloader": true
    },
    "require":{
        "php": "~7.4",
        "teknoo/immutable": "^2.0.0-beta4"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.4",
        "squizlabs/php_codesniffer": "~3.5",
        "pdepend/pdepend": "~2.5",
        "sebastian/phpcpd": "~4.1",
        "phploc/phploc": "~5.0",
        "phpstan/phpstan": "~0.12",
        "doctrine/orm": "~2.7",
        "doctrine/mongodb-odm": "~1.3||~2.0"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Teknoo\\States\\": ["src/"],
            "Teknoo\\UniversalPackage\\States\\": "package/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Teknoo\\Tests\\States\\": ["tests/States/"],
            "Teknoo\\Tests\\Support\\": ["tests/Support/"],
            "Teknoo\\Tests\\UniversalPackage\\States\\": "tests/package/"
        }
    },
    "archive": {
        "exclude": ["demo", "vendor", ".idea"]
    }
}
