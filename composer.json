{
    "name": "unialteri/states",
    "type": "library",
    "description": "Library to create easily and cleanly classes with several states, writed in distinct codes blocks, but never used \"if conditions\" with PHP 5.4+.",
    "keywords": ["states","class","state pattern","pattern","behavioral software design pattern"],
    "homepage": "http://teknoo.it/states",
    "license": ["MIT","GPL-3.0+"],
    "authors": [
        {
            "name": "Richard DÃ©loge",
            "email": "r.deloge@uni-alteri.com",
            "role":"Software architect, Lead developer"
        }
    ],
    "support": {
        "issues": "https://github.com/UniAlteri/states/issues",
        "source": "https://github.com/UniAlteri/states"
    },
    "require":{
        "php": ">=5.7",
        "pimple/pimple": "~3.0",
        "symfony/console": "~2.0",
        "knplabs/gaufrette": "<2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "phpunit/phpunit-mock-objects": "~2.3",
        "phpunit/phpunit-selenium": "~1.4",
        "phpunit/phpunit-story": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "UniAlteri\\States\\": ["src/UniAlteri/States/"],
            "UniAlteri\\Tests\\States\\": ["tests/UniAlteri/Tests/States"],
            "UniAlteri\\Tests\\Support\\": ["tests/UniAlteri/Tests/Support"]
        }
    },
    "archive": {
        "exclude": ["demo", "vendor", ".idea"]
    },
    "bin": ["bin/states.php"],
    "scripts": {
      "test":"phpunit",
      "states":"bin/states.php"
    }
}
